{
  "name": "ha-tplink-router-card",
  "version": "0.3.1",
  "private": true,
  "type": "module",
  "description": "Home Assistant Lovelace card for TP-Link client monitoring across tplink_router, tplink_deco, omada, and tplink_omada integrations",
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest run",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "check": "npm run lint && npm run typecheck && npm run test -- --run",
    "format": "prettier --write \"src/**/*.{ts,js}\" \"*.{md,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\" \"*.{md,json}\""
  },
  "dependencies": {
    "lit": "^3.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "globals": "^15.15.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.55.0",
    "vite": "^5.4.8",
    "vitest": "^2.1.1"
  }
}
